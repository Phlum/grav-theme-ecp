{% extends 'partials/base.html.twig' %}

{% block content %}

<main id="page-home" role="main">

  <section class="featured">
    {% for p in taxonomy.findTaxonomy({'category':'article', 'tag':'featured'})|slice(0,1) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="{{ p.header.custom.hero|first.path }}" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

  <section class="latest-article">
    {% for p in taxonomy.findTaxonomy({'category':'article'})|slice(0,1) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="{{ p.header.custom.hero|first.path }}" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

  <section class="latest-video">
    {% for p in taxonomy.findTaxonomy({'category':'video'})|slice(0,1) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="https://img.youtube.com/vi/{{ p.header.custom.video }}/maxresdefault.jpg" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

  <section class="article-small article-small-1">
    {% for p in taxonomy.findTaxonomy({'category':'article'})|slice(1,2) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="{{ p.header.custom.hero|first.path }}" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

  <section class="article-small article-small-2">
    {% for p in taxonomy.findTaxonomy({'category':'article'})|slice(2,3) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="{{ p.header.custom.hero|first.path }}" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

  <section class="article-small article-small-3">
    {% for p in taxonomy.findTaxonomy({'category':'article'})|slice(3,4) %}
    <a href="{{ p.url }}">
      <figcaption>{{ p.title }}</figcaption>
      <img src="{{ p.header.custom.hero|first.path }}" alt="{{ p.title }}">
    </a>
    {% endfor %}
  </section>

</main>

{% endblock %}
