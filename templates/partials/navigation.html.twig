<nav role="navigation">
  <ul class="nav-bar">

  {% for p in taxonomy.findTaxonomy({'category':'topLevel'}) %}

    <li><a href="{{ p.url }}">{{ p.title }}</a>

    {% if p.collection | length > 0 %}
      <ul class="submenu">
      {% for q in p.collection %}
        <li><a href="{{ q.url }}">{{ q.title }}</a></li>
      {% endfor %}
      </ul>
    {% endif %}

    </li>

  {% endfor %}

  </ul>
</nav>
